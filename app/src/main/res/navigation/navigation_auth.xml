<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_auth"
    app:startDestination="@id/loginFragment">


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.capstone.nutrisense.views.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
        android:id="@+id/action_loginFragment_to_registerFragment"
        app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_personalFragment"
            app:destination="@id/personalFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.capstone.nutrisense.views.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >

        <action
        android:id="@+id/action_registerFragment_to_loginFragment"
        app:destination="@id/loginFragment" />
    </fragment>


    <fragment
        android:id="@+id/personalFragment"
        android:name="com.capstone.nutrisense.views.auth.PersonalFragment"
        android:label="fragment_personal"
        tools:layout="@layout/fragment_personal" >
    <action
        android:id="@+id/action_personalFragment_to_dashboardFragment"
        app:destination="@id/dashboardFragment" />
    </fragment>


    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.capstone.nutrisense.views.main.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
</navigation>